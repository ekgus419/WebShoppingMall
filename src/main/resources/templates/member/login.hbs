<html>
<head>
    <title>login</title>
</head>
<body>
<div id="root">
    <header id="header">
        <div id="header_box">
            {{> member/include/header}}
        </div>
    </header>
    <nav id="nav">
        <div id="nav_box">
            {{> member/include/nav}}
        </div>
    </nav>
    <section id="container">
        <div id="container_box">
            <section id="content">
                <form action="/login" method="POST" class="form-signin">
<!--                <form role="form" method="post" autocomplete="off">-->
                    <div class="input_area">
                        <label for="user_email">아이디</label>
                        <input type="email" id="user_email" name="user_email" required="required" value="" />
                    </div>
                    <div class="input_area">
                        <label for="user_pwd">패스워드</label>
                        <input type="password" id="user_pwd" name="user_pwd" required="required" value="" />
                    </div>
                    <button type="submit" id="signin_btn" name="signin_btn">로그인</button>
                </form>
            </section>
        </div>
    </section>
    <footer id="footer">
        <div id="footer_box">
            {{> member/include/footer}}
        </div>
    </footer>
</div>
</body>
</html>
