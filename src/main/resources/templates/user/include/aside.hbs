<ul>
    <li><b>카테고리</b></li>
    <form id="categoryForm">
    {{#category}}
            <!-- 1차 카테고리 -->
            <li>
                <a href="#">{{categoryName}}</a>
                <input type="hidden" name="categoryCode" value="{{categoryCode}}" data-rowIndex="{{@index}}"  />
                <ul class="low">
                    {{#goodsSubCategory}}
                    <!-- 2차 카테고리 -->
                    <li>
                        <a href="javascript:void(0);" class="btn-category" data-code="{{categorySubCode}}">{{categoryName}}</a>
                    </li>
                    <input type="hidden" name="categorySubCode" value="{{categorySubCode}}" data-rowIndex="{{@index}}" />
                    {{/goodsSubCategory}}
                </ul>
            </li>
    {{/category}}
    </form>
</ul>

